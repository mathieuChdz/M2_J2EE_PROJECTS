<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="livraisonClassique" class="fr.amis.tp3.entity.Classique">
        <property name="delaiMoyenJours" value="5"/>
    </bean>

    <bean id="livraisonDrone" class="fr.amis.tp3.entity.Drone">
        <property name="typeLogement" value="maison"/>
    </bean>

    <bean id="optionRetour" class="fr.amis.tp3.entity.OptionRetour">
        <property name="nbJours" value="14"/>
    </bean>

    <bean id="optionPrime" class="fr.amis.tp3.entity.OptionPrime">
        <property name="avecAbonnement" value="true"/>
    </bean>

    <bean id="magasin" class="fr.amis.tp3.entity.Magasin" >
        <constructor-arg  value="Amazon" />
        <property name="modeLivraison" ref="livraisonClassique"/>
        <property name="options">
            <list>
                <ref bean="optionRetour"/>
                <ref bean="optionRetour"/>
                <ref bean="optionPrime"/>
                <ref bean="optionRetour"/>
                <ref bean="optionPrime"/>
                <ref bean="optionRetour"/>
            </list>
        </property>
    </bean>

    <bean id="serviceMagasin" class="fr.amis.tp3.service.ServiceMagasin">
        <property name="magasin" ref="magasin"/>
    </bean>


</beans>
